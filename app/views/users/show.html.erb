<!-- ユーザーの詳細 -->
<!-- @userはコントローラで定義した@userを参照している -->
<div>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image(100,100) %>
  <!-- rails routesでedit_user GET    /users/:id/edit(.:format) って書かれていたので下のような記述にした -->
  <!-- 画面に表示しているユーザーと、ログインしているユーザーのIDが一致するか -->
  <% if @user == current_user %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>

<!-- ユーザーの投稿一覧 -->

<%= render 'post_images/list', post_images: @post_images %>